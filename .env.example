# Database Configuration
DB_SERVER=localhost
DB_NAME=PersonalUniverseDB
DB_TRUSTED_CONNECTION=True
DB_TRUST_SERVER_CERTIFICATE=True

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-key-minimum-32-characters-long-for-jwt-signing
JWT_ISSUER=PersonalUniverseSimulator
JWT_AUDIENCE=PersonalUniverseClients
JWT_EXPIRATION_MINUTES=60

# Google OAuth Configuration
GOOGLE_CLIENT_ID=YOUR_GOOGLE_CLIENT_ID.apps.googleusercontent.com

# RabbitMQ Configuration
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USERNAME=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VIRTUALHOST=/
RABBITMQ_EXCHANGE=personal_universe_events

# Redis Configuration (Optional)
REDIS_CONNECTION=localhost:6379

# Service URLs (Inter-service Communication)
IDENTITY_SERVICE_URL=https://localhost:5001
STORAGE_SERVICE_URL=https://localhost:5002
PERSONALITY_SERVICE_URL=https://localhost:5003
SIMULATION_ENGINE_URL=https://localhost:5004
EVENT_SERVICE_URL=https://localhost:5005
VISUALIZATION_SERVICE_URL=https://localhost:5006

# Application Settings
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=https://localhost:5001
